{
  "expo": {
    "name": "Wright",
    "slug": "Wright",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "wright",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": false,
    "font": {
      "switzer": {
        "normal": "./assets/fonts/Switzer-Regular.ttf",
        "bold": "./assets/fonts/Switzer-Bold.ttf"
      }
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "app.smatthewman.Wright",
      "infoPlist": {
        "ITSAppUsesNonExemptEncryption": false
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff"
        }
      ],
      [
        "expo-sqlite",
        {
          "useLibSQL": true
        }
      ],
      [
        "expo-audio",
        {
          "microphonePermission": "Allow Wright to access your microphone."
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "fefcfe7b-2cb1-4233-a531-a14157cfe841"
      }
    }
  }
}
